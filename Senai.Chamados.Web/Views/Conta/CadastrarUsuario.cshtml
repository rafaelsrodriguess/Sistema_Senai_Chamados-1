@model Senai.Chamados.Web.ViewModels.Usuario.UsuarioViewModel

@{
    /**/

    ViewBag.Title = "CadastrarUsuario";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section Styles{
    <link href="~/Content/Signin.css" rel="stylesheet" />
}

@using (Html.BeginForm("CadastrarUsuario", "Conta", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()

    @ViewBag.Autenticado

    <div class="text-center mb-4">
        <img class="mb-4" src="~/Content/img/senai-sp.jpg" alt="" width="125" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Criar Conta</h1>
        <p>Crie uma conta para abrir chamados em nosso sistema.</p>
    </div>

    <p>@ViewBag.Erro</p>

    @Html.LabelFor(x => x.Nome, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", placeholder = "Informe o Nome" })
    @Html.ValidationMessageFor(x => x.Nome, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Email, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Informe o Email" })
    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })

    @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control", placeholder = "Informe o Telefone" })
    @Html.LabelFor(x => x.Telefone, new { @class = "sr-only" })
    @Html.ValidationMessageFor(x => x.Telefone, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Cpf, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Cpf, new { @class = "form-control", placeholder = "Informe o Cpf" })
    @Html.ValidationMessageFor(x => x.Cpf, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Senha, new { @class = "sr-only" })
    @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "Informe a Senha" })
    @Html.ValidationMessageFor(x => x.Senha, "", new { @class = "text-danger" })

    @Html.DropDownListFor(x => x.Sexo, Model.ListaSexo, "Selecione o Sexo", new { @class = "form-control" })

    @Html.LabelFor(x => x.Cep, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Cep, new { @class = "form-control", placeholder = "Informe o Cep" })
    @Html.ValidationMessageFor(x => x.Cep, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Logradouro, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Logradouro, new { @class = "form-control", placeholder = "Informe o Logradouro" })
    @Html.ValidationMessageFor(x => x.Logradouro, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Numero, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Numero, new { @class = "form-control", placeholder = "Informe o Número" })
    @Html.ValidationMessageFor(x => x.Numero, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Complemento, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Complemento, new { @class = "form-control", placeholder = "Informe o Complemento" })
    @Html.ValidationMessageFor(x => x.Complemento, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Bairro, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control", placeholder = "Informe o Bairro" })
    @Html.ValidationMessageFor(x => x.Bairro, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Cidade, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Cidade, new { @class = "form-control", placeholder = "Informe a Cidade" })
    @Html.ValidationMessageFor(x => x.Cidade, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.Estado, new { @class = "sr-only" })
    @Html.TextBoxFor(x => x.Estado, new { @class = "form-control", placeholder = "Informe o Estado" })
    @Html.ValidationMessageFor(x => x.Estado, "", new { @class = "text-danger" })

    <button class="btn btn-lg btn-primary btn-block" type="submit">Cadastrar</button>
    <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
}

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>

    <script>
        $(document).ready(function () {
            $("#Telefone").mask('(00) 0000-00000');
            $("#Cep").mask('00000-000');
            $("#Cpf").mask('000.000.000-00')


        })
    </script>
}