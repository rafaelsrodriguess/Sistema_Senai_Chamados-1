@model Senai.Chamados.Web.ViewModels.Usuario.UsuarioViewModel

@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Deletar Usuário</h2>

@using (Html.BeginForm("Deletar", "Usuario", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    @Html.AntiForgeryToken()

    <br />
    <br />
    <p> Você realmente deseja deletar o usuário @Model.Nome</p>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Excluir</button>
}

