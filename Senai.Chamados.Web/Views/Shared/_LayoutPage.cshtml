@using Senai.Chamados.Web.Helpers
<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    Senai Chamados
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="/Chamado" class="nav-item">Chamados</a>
                        </li>
                        if (User.IsInRole("Administrador"))
                        {
                        <li>
                            <a href="/Usuario" class="nav-item">Usuários</a>
                        </li>
                        }
                        <li>
                            <a href="/Graficos" class="nav-item">Gráficos</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item login">
                            <a class="nav-link " href="/conta/login">Login <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item cadastrarusuario">
                            <a class="nav-link" href="/conta/cadastrarusuario">Cadastrar Conta</a>
                        </li>
                    </ul>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle nav-item" data-toggle="dropdown">@User.Identity.Name<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Alterar Senha", "AlterarSenha", "Perfil")</li>
                                <li>@Html.ActionLink("Sair", "Logout", "Conta")</li>
                            </ul>
                        </li>
                    </ul>
                }
            </div><!--/.nav-collapse -->
        </div>
    </nav>


    <div class="container">

        @RenderBody()

        <hr />
        <footer>
            <p>@MeuHelper.DireitosReservados()</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
